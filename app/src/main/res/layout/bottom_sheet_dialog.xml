<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/yellow"
    android:id="@+id/idRlBSheet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location name"
        android:layout_margin="6dp"
        android:textColor="@color/white"
        android:id="@+id/placename"
        android:textSize="15sp"
        android:textStyle="bold"/>

<!--    <ImageView-->
<!--        android:id="@+id/idimg"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:layout_below="@id/placename"-->
<!--        android:layout_centerVertical="true"-->
<!--        android:layout_margin="4dp"-->
<!--        android:padding="4dp"-->
<!--        android:src="@mipmap/ic_launcher"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/avalibility"
        android:layout_below="@id/placename"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:padding="3dp"
        android:text="Availibility"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bcontact"
        android:layout_below="@id/avalibility"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:padding="3dp"
        android:text="Contact"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_below="@id/bcontact"
        >

        <Button
            android:id="@+id/updatepar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/light_orange"
            android:layout_weight="1"
            android:text="Update Parking"
            android:textAllCaps="false"
            android:textColor="@color/white" />

<!--        <Button-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight= "1"-->
<!--            android:layout_margin="4dp"-->
<!--            android:text="Delete Parking"-->
<!--            android:textAllCaps="false"-->
<!--            android:textColor="@color/white"-->
<!--            android:id="@+id/deletepa"/>-->
    </LinearLayout>
</RelativeLayout>