<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_orange">

        <!--        <ImageView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="200dp"-->
        <!--            android:id="@+id/imgivparking"-->
        <!--            android:scaleType="centerCrop"/>-->

        <TextView
            android:id="@+id/uslocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/usname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@id/uslocation"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/uscontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@id/usname"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/usvehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle No"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@id/uscontact"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>